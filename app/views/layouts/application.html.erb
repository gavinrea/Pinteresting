<!DOCTYPE html>
<html>
<head>
	<title>Pinteresting</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<!-- meta tag for mobile device goes here! -->
	<!-- says we want the page width to be the device width, useful -->
	<!-- can decide whether or not user-scalable here -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<%=render 'layouts/header'%>
	<!-- container has a width: 1024px; max-width: 100%; scales w/ page!!!! -->
	<div class="container">

		<div class="row">
			<!-- display all flash messages with class alert and alert name -->
			<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert alert-#{name}") %>
			<% end %>

			<%= yield %>
			
		</div>
	</div>
	<!-- tag for google analytics -->
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-37775683-3', 'auto');
		ga('send', 'pageview');

	</script>
</body>
</html>
